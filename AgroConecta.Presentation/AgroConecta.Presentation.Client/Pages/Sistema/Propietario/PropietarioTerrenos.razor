    // Lista paginada (modificada para usar la lista filtrada)
    private List<TerrenoCard> CurrentPageCards => FilteredCards
        .Skip((CurrentPage - 1) * ItemsPerPage)
        .Take(ItemsPerPage)
        .ToList();

    // Total de páginas basado en la lista filtrada
    private int TotalPages => (int)Math.Ceiling((double)FilteredCards.Count / ItemsPerPage);

    private string _searchTerm = string.Empty;
    private string SearchTerm
    {
        get => _searchTerm;
        set
        {
            _searchTerm = value;
            CurrentPage = 1; // Resetear a primera página al buscar
        }
    }

    // Lista filtrada
    private List<TerrenoCard> FilteredCards => _terrenosCards
        .Where(c =>
            c.Titulo.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ||
            c.Subtitulo.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ||
            c.Descripcion.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase))
        .ToList();


    #region Obtener terrenos
    protected override async Task OnInitializedAsync()
    {
        await GetAll();
    }

    private async Task GetAll()
    {
        _isLoadingData = true;
        _terrenos = await TerrenoAgent.GetAllAsync(new[]{"Municipio", "Municipio.Provincia"});

        // Mapea la colección _terrenos a una lista de TerrenoCard
        var nuevosTerrenosCards = _terrenos.Select(t => new TerrenoCard(
            id: t.Id,
            titulo: t.DescripcionProvincia ?? String.Empty,
            subtitulo: $"MUNICIPIO DE {t.DescripcionMunicipio}" ?? String.Empty,
            descripcion:  t.Descripcion,
            imagen: "./images/dummy/dummy-terreno-1.jpg" // O bien, derivarla de t
        )).ToList();
        _terrenosCards = nuevosTerrenosCards;
        // Agrega los nuevos elementos a la lista existente _terrenosCards
        //_terrenosCards.AddRange(nuevosTerrenosCards);
        _isLoadingData = false;
        StateHasChanged();
    }
    

    #endregion
    #region TerrenoCard
    public class TerrenoCard
    {
        public string Id { get; set; }
        public string Titulo { get; set; }
        public string Subtitulo { get; set; }
        public string Descripcion { get; set; }
        public string Imagen { get; set; }

        public TerrenoCard(string id, string titulo, string subtitulo, string descripcion, string imagen )
        {
            Id = id;
            Titulo = titulo;
            Subtitulo = subtitulo;
            Descripcion = descripcion;
            Imagen = imagen;
        }
    }
    #endregion

    #region Operaciones con terreno

    private async Task OpenCreateDialog()
    {
        var result = await DialogService.Show<FrmTerreno>("Nuevo terreno", new DialogOptions {
            CloseButton = true,
            BackdropClick = false
        }).Result;
    
        if (!result.Canceled) await GetAll();
    }    

    private async Task OpenEditDialog(string id)
    {
        var parameters = new DialogParameters {
            { "idItem", id },
            { "IsViewMode", false }
        };
    
        var result = await DialogService.Show<FrmTerreno>("Editar terreno", parameters, new DialogOptions {
            CloseButton = true,
            MaxWidth = MaxWidth.Small,
            BackdropClick = false

        }).Result;
    
        if (!result.Canceled) await GetAll();
    }
    private async Task OpenViewDialog(string id)
    {
        NavigationManager.NavigateTo($"/sistema/propietario/vistaterreno/{id}");
    }
    private async Task Eliminar(string id)
    {
        var parameters = new DialogParameters
        {
            { "Content", "¿Está seguro de eliminar este registro?" },
            { "ButtonColor", Color.Error },
            { "ButtonText", "Eliminar" }
        };

        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.ExtraSmall };

        var dialog = DialogService.Show<AvisoConfirmacion>("Confirmación", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            await TerrenoAgent.HardDeleteAsync(id);
            Snackbar.Add("Registro eliminado correctamente", Severity.Success);
            await GetAll();
        }
    }
    #endregion
