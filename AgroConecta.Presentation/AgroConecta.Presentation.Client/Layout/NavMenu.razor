@implements IDisposable

@inject NavigationManager NavigationManager

<MudContainer Class="d-flex align-center justify-center mud-width-full">
    <AuthorizeView>
        <Authorized>
            <MudNavLink Href="auth" Match="NavLinkMatch.Prefix">
                <MudStack Direction="Column" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center">
                    <MudIcon Icon="@Icons.Material.Filled.Work" Size="Size.Large"/>
                    <MudText Typo="Typo.h6">Proyectos</MudText>
                </MudStack>
            </MudNavLink>
            <MudNavLink Href="Account/Manage" Match="NavLinkMatch.Prefix">
                <MudStack Direction="Column" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center">
                    <MudIcon Icon="@Icons.Material.Filled.AccountCircle" Size="Size.Large"/>
                    <MudText Typo="Typo.h6">@context.User.Identity?.Name</MudText>
                </MudStack>
            </MudNavLink>
            <form action="Account/Logout" method="post">
                <AntiforgeryToken/>
                <input type="hidden" name="ReturnUrl" value="@currentUrl"/>
                <MudNavLink>
                    <button type="submit">
                        <MudStack Direction="Column" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center">
                            <MudIcon Icon="@Icons.Material.Filled.Logout" Size="Size.Large"/>
                            <MudText Typo="Typo.h6">Salir</MudText>
                        </MudStack>
                    </button>
                </MudNavLink>

            </form>
        </Authorized>
        <NotAuthorized>
            <MudNavLink Href="" Match="NavLinkMatch.All">
                <MudStack Direction="Column" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center">
                    <MudIcon Icon="@Icons.Material.Filled.Home" Size="Size.Large"/>
                    <MudText Typo="Typo.h6">Inicio</MudText>
                </MudStack>
            </MudNavLink>
            <MudNavLink Href="Account/Register" Match="NavLinkMatch.Prefix" >
                <MudStack Direction="Column" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center">
                    <MudIcon Icon="@Icons.Material.Filled.Person" Size="Size.Large"/>
                    <MudText Typo="Typo.h6">Registrarse</MudText>
                </MudStack>
            </MudNavLink>
            <MudNavLink Href="Account/Login" Match="NavLinkMatch.Prefix">
                <MudStack Direction="Column" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center">
                    <MudIcon Icon="@Icons.Material.Filled.Password" Size="Size.Large"/>
                    <MudText Typo="Typo.h6">Login</MudText>
                </MudStack>
            </MudNavLink>
        </NotAuthorized>
    </AuthorizeView>

</MudContainer >


@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }

}