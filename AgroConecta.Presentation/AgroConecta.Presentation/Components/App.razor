<script>
    function checkIfAsideIsOpen() {
        var aside = document.getElementById('drawer-navigation');
        return aside.classList.contains('transform-none');
    }
    window.initializeFlowbite = () => {
        AOS.init();
        initFlowbite();
    }

    async function GenerarMapa(latitude, longitude, zoom, descripcion) {
        var container = L.DomUtil.get('mapTerreno');
        if(container != null){
            container._leaflet_id = null;
        }
        var map = L.map('mapTerreno').setView([latitude, longitude], zoom);

        L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);

        L.marker([latitude, longitude]).addTo(map)
            .bindPopup(descripcion)
            .openPopup(); 
    }


</script>
